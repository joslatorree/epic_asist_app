<script>
  // Código que se activa automáticamente al cargar la vista
  document.addEventListener('DOMContentLoaded', async function () {
    // Parsear los datos del usuario activo
    const usuarioActivoJSON = localStorage.getItem('usuarioActivo');
    if (usuarioActivoJSON) {
      const usuarioActivo = JSON.parse(usuarioActivoJSON);
      //aqui debemos seleccionar porque devuelve en esa estructura, el paquete usuarioActivo, dentro el apartado user, dentro estan los atributos como usuario_nombre

      const usuario_email = usuarioActivo.user.usuario_email;
      //const usuario_password = usuarioActivo.user.usuario_password;

      try {
        // Hacer la solicitud POST a la API de getUser
        const response = await fetch('/api/usuario/getUser', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ usuario_email: usuario_email }),
        });

        const result = await response.json();

        if (response.ok) {
          // Mostrar una alerta con los valores de result
          //mantendremos esto pero debemos sacarlo
          if (result.usuario_sesion !== usuarioActivo.user.usuario_sesion) {
            alert(`${result.usuario_nombre} se inicio sesion en otro dispositivo`);
            window.location.href = '/login';
          }
        } else {
          // Mostrar mensaje de error si algo falla
          alert(result.message || 'Error en el inicio de sesión');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error al intentar iniciar sesión. Por favor, inténtelo de nuevo.');
      }



      document.getElementById('nombre_usuario_layout').value = usuarioActivo.user.usuario_nombre;
      const menu_seguridad = document.getElementById('menu_seguridad');
      const menu_mantenimiento = document.getElementById('menu_mantenimiento');
      const menu_proyecto = document.getElementById('menu_proyecto');
      const Controlar_Módulo_de_Rutas = document.getElementById('link_rf03');
      const Gestionar_Notificaciones_y_Alertas = document.getElementById('link_rf04');
      const Controlar_Módulo_de_Monitoreo = document.getElementById('link_rf05');
      const Gestionar_Módulo_de_Predicción = document.getElementById('link_rf06');

      // Ocultar el elemento si el tipo de usuario no tiene permisos
      if (usuarioActivo.user.usuario_tipo == 'operador') { // Ajusta 'admin' al tipo de usuario que debe ver el menú
        menu_seguridad.style.display = 'none';
        //menu_mantenimiento.style.display = 'none';
        //menu_proyecto.style.display = 'none';
      }
      else if (usuarioActivo.user.usuario_tipo == 'pasajero') {
        menu_seguridad.style.display = 'none';
        menu_mantenimiento.style.display = 'none';
        //menu_proyecto.style.display = 'none';
        Gestionar_Notificaciones_y_Alertas.style.display = 'none';
        Controlar_Módulo_de_Monitoreo.style.display = 'none';
        Gestionar_Módulo_de_Predicción.style.display = 'none';
      }
      else if (usuarioActivo.user.usuario_tipo == 'conductor') {
        menu_seguridad.style.display = 'none';
        menu_mantenimiento.style.display = 'none';
        //menu_proyecto.style.display = 'none';
        Gestionar_Notificaciones_y_Alertas.style.display = 'none';
        Controlar_Módulo_de_Rutas.style.display = 'none';
        Controlar_Módulo_de_Monitoreo.style.display = 'none';
        Gestionar_Módulo_de_Predicción.style.display = 'none';
      }
      else if (usuarioActivo.user.usuario_tipo == 'administrador') {
          menu_seguridad.style.display = 'none';
        //menu_mantenimiento.style.display = 'none';
        //menu_mantenimiento.style.display = 'none';
      }

      console.log('Usuario activo:', usuarioActivo);
    } else {
      console.error('No se encontró usuarioActivo en localStorage');
    }

    // Obtener el elemento del enlace
    const link_rf02 = document.getElementById('link_rf02');
